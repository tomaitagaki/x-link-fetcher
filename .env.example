# Server Configuration
PORT=3000
NODE_ENV=production

# Zo Platform Settings
ZO_APP_NAME=x-link-fetcher
ZO_REGION=us-east-1
ZO_ENVIRONMENT=production

# Nitter Configuration
NITTER_INSTANCE=nitter.poast.org

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=*
HELMET_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Performance
REQUEST_TIMEOUT=10000
KEEP_ALIVE_TIMEOUT=65000

# Health Check
HEALTH_CHECK_ENABLED=true

# Graceful Shutdown
SHUTDOWN_TIMEOUT=30000

# Monitoring (Optional - for Zo platform integration)
ZO_METRICS_ENABLED=true
ZO_TRACING_ENABLED=false
ZO_APM_ENDPOINT=https://apm.zo.dev